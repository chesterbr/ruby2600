class GameWindow < javax.swing.JFrame
  SCALE = 3

  def initialize
    super("Atari!")
    set_size 800, 600
    root_pane.opaque = false
    getContentPane.setOpaque(false)
    @image = java.awt.image.BufferedImage.new(800, 600, java.awt.image.BufferedImage::TYPE_INT_RGB)

    add_key_listener { |k| handle_press(k) }
    self.default_close_operation = javax.swing.WindowConstants::EXIT_ON_CLOSE
  end

  def load_cart(filename)
    @bus = Ruby2600::Bus.new(Ruby2600::CPU.new,
                             Ruby2600::TIA.new,
                             Ruby2600::Cart.new(filename),
                             Ruby2600::RIOT.new)
    @bus.p0_joystick_up = false
    @bus.p0_joystick_down = false
    @bus.p0_joystick_left = false
    @bus.p0_joystick_right = false
    @bus.p0_joystick_fire = false
    @bus.select_switch = false
    @bus.reset_switch = false
    @bus.p0_difficulty_switch = true
    @bus.p1_difficulty_switch = true
    @bus.color_bw_switch = false
  end

  def update
    frame = @bus.tia.frame
    g = @image.create_graphics
    frame.each_with_index do |row, y|
      row.each_with_index do |chr, x|
        color = NTSC_COLOR_LUM_TO_SRGB[chr / 2]
        g.color = java.awt.Color.new(color)
        g.fill_rect(x*SCALE, y*SCALE, SCALE, SCALE)
      end
    end
    repaint
  end

  def paint(g)
    g.draw_image(@image, 0, 30, nil)
  end

  def handle_press(event)
    set = if event.id == java.awt.event.KeyEvent::KEY_PRESSED
      true
    elsif event.id == java.awt.event.KeyEvent::KEY_RELEASED
      false
    end

    case event.key_code
      when 38 then @bus.p0_joystick_up = set
      when 40 then @bus.p0_joystick_down = set
      when 37 then @bus.p0_joystick_left = set
      when 39 then @bus.p0_joystick_right = set
      when 32 then @bus.p0_joystick_fire = set
      when 49 then @bus.select_switch = set
      when 50 then @bus.reset_switch = set
      when 53 then @bus.p0_difficulty_switch = true
      when 54 then @bus.p0_difficulty_switch = false
      when 55 then @bus.p1_difficulty_switch = true
      when 56 then @bus.p1_difficulty_switch = false
    end
  end
end

window = GameWindow.new
window.load_cart ARGV[0]
window.show

while(true)
  window.update
end
